{{!< default}}
{{#post}}
<header class="regular post"
	{{#if feature_image}}
	style="background-image: url({{feature_image}});"
	{{else}}
		{{#if @site.cover_image}}
		style="background-image: url({{@site.cover_image}});"
		{{else}}
		style="background-image: url('{{asset "images/cover.jpg"}}');"
		{{/if}}
	{{/if}}
>
	{{> nav-container}}

	<div class="title-container">
		<h1 class="post-title">{{title}}</h1>
	</div>
</header>

<main>
	<div class="post-content">{{content}}</div>
</main>
{{/post}}
